<div class="card">
  <div class="card-image waves-effect waves-block waves-light">
    <img src="<%= @member.avatar_url %>" class="circle">
  </div>
  <div class="card-content">
    <span class="card-title activator grey-text text-darken-4"><%= @member.name %><i class="material-icons right">more_vert</i></span>
    <p><a href="#">Saiba Mais</a></p>
  </div>
  <div class="card-reveal">
    <span class="card-title grey-text text-darken-4">
      <%= @member.name %> - <%= FindMyPersonal.Utils.age(@member.birth_date) %> Anos
      <i class="material-icons right">close</i>
    </span>
    <p><strong>Email:</strong> <%= @member.email %></p>
    <p><strong>Data de Nascimento:</strong> <%= FindMyPersonal.Utils.convert_br(@member.birth_date) %></p>
    <p>
      <strong>Tipo Sanguineo:</strong>
      <div class="chip red white-text">
        <%= @member.blood %>
      </div>
    </p>
    <p>
      <strong>Altura:</strong>
      <%= @member.height %>
    </p>
  </div>
</div>


<%= link to: Routes.member_path(@conn, :index), class: "waves-effect waves-light btn-large blue" do %>
  <i class="material-icons">reply</i>Back
<% end %>

<%= link to: Routes.member_path(@conn, :edit, @member), class: "waves-effect waves-light btn-large blue right" do %>
  <i class="material-icons">edit</i>Edit
<% end %>

<div class="row"></div>
